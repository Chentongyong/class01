/**index.wxss**/


.topBox {
  width: 94%;
  padding: 0 3%;
  height: 80rpx; 
  position: fixed;
  line-height: 80rpx; 
  background-color: #0b9ad6;
  font-size: 30rpx;
  color: #fff;
}

.topBox .tb_l image {
  width: 36rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.header image {
  width: 100%;
  height: 400rpx;
  margin-top: 80rpx;
}

.tob-classify {
  width: 80%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 56rpx 10%;
}

.tob-classify-listZi {
  width: 200rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 36rpx;
}

.tob-classify-listZi image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 40rpx;
}

.tob-list {
  width: 94%;
  padding: 0 3%;
  background-color: #fff;
  margin-top: 40rpx;
}

.tob-list .tob-list-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 36rpx 0;
}

.list-left {
  font-size: 36rpx;
  color: #000;
  border-left: 6rpx solid #000;
  text-indent: 32rpx;
}

.list-right {
  font-size: 30rpx;
  color: #666;
}

.list-right image {
  width: 20rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.listBox .listBox-box {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1px solid #ccc;
  width: 100%;
}

.listBox .listBox-box image {
  width: 30%;
  height: 150rpx;
  background-color: #ccc;
}

.listBox-box .box_r {
  width: 70%;
  margin-left: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
}

.listBox-box .box_r .box-text {
  font-size: 36rpx;
}

.listBox-box .box_r .box_rBox {
  display: flex;
  justify-content: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.box_rBox .rBox-zi {
  width: 204rpx;
  text-align: center;
  padding: 10rpx 6rpx;
  background-color: #eee;
  margin-right: 22rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

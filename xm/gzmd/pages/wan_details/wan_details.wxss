.boxBox {
  width: 94%;
  overflow: hidden;
  position: relative;
  left: 3%;
}
.box-xx {
  background-color: #fff;
  margin-top: 20rpx;
}

.box-xx .xx-up {
  padding: 5%;
  border-bottom: 1px dotted #ccc;
  font-size: 24rpx;
  color: #666;
}

.xx-up .up-text {
  font-size: 28rpx;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.box-xx .xx-center {
  padding: 20rpx 5%;
  font-size: 28rpx;
  color: #333;
}

.xx-center .cen-zi {
  height:60rpx;
  line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cen-zi .zi-text {
  color: #f10707;
}

.describe {
  background-color: #fff;
  padding: 20rpx 5%;
  height: 400rpx;
  font-size: 20rpx;
  position: relative;
  top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 150rpx;
}

.describe .text {
  color: #000;
  padding-left: 20rpx;
  border-left: 3px solid #000;
  font-weight: 600;
}

.describe .des-text {
  padding-top: 16rpx;
  border-top: 1px dotted #ccc;
  flex-wrap:warp;
  white-space:pre-wrap;
  word-break:break-all;
  position: relative;
  top: 20rpx;
}
.des-text text{
  width: 100%
}
.tabbar {
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  /* justify-content: center; */
  border-top: 1px solid #ccc;
  font-size: 20rpx;
}

.tabbar .tab-left {
  padding: 20rpx;
  width: 50%;
  text-align: left;
  float: left;
}

.tab-left text {
  display: block;
}

.tabbar .tab-right {
  width: 50%;
  text-align: right;
  float: right;
  padding: 24rpx;
}

.tab-right image {
  width: 48rpx;
  height: 48rpx;
}

.tab-right image:nth-child(1) {
  margin-right: 40rpx;
}

.header {
    border-bottom: 1px solid #ccc;
    width: 200rpx;
    height: 200rpx;
    background-color: #222;
    border-radius: 50%;
    margin: 90rpx auto
}
 
.header image {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  top: 25rpx;
  left: 25rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
    border-top: 1rpx solid #ccc;
    padding-top:90rpx 
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
